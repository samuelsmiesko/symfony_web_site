{% extends 'base.html.twig' %}

{% block title %}Hello GalleryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container">
    <h1>Hello {{ controller_name }}! âœ…</h1> {# <img src="{{ asset('img/bird.jpg')}}" alt=""> #}


    <div class="container m-3">

        {% for folder in folders %} {% if loop.index % 2 == 0 and loop.index > 2 %} {% set previous = folders[loop.index - 2] %}
        <div class="row">


            <div class="col-md-6">
                <div id="{{ loop.index0 }}" class="card shadow-sm m-2 ">
                    <div>
                        <img style="max-height:500px; object-fit: cover;" src="{{ asset( 'img/' ~ folder ~ '/main.jpg') }}" class="w-100" />
                    </div>
                    <div class="card-body">
                        <h3 class="card-text">{{ folder }}</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('gallery',{id: folder})}}" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div id="{{ loop.index0 }}" class="card shadow-sm m-2 ">
                    <div>
                        <img style="max-height:500px; object-fit: cover;" src="{{ asset( 'img/' ~ previous ~ '/main.jpg') }}" class="w-100" />
                    </div>
                    <div class="card-body">
                        <h3 class="card-text">{{ previous }}</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('gallery',{id: previous})}}" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        {% endif %} {% if loop.index == loop.length %}
        <div class="col-md-6">
            <div id="{{ loop.index0 }}" class="card shadow-sm m-2 ">
                <div>
                    <img style="max-height:500px; object-fit: cover;" src="{{ asset( 'img/' ~ folder ~ '/main.jpg') }}" class="w-100" />
                </div>
                <div class="card-body">
                    <h3 class="card-text">{{ folder }}</h3>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('gallery',{id: folder})}}" class="btn btn-sm btn-outline-secondary">View</a>
                    </div>
                </div>
            </div>
        </div>
        {% endif %} {% endfor %}
    </div>

</div>
</div>
{% endblock %}
